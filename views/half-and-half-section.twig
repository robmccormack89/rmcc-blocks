{#
/**
 * Block Name: Half & Half section
 *
 * This is the template that displays the Half & Half section block.
 */
#}

{% extends "block.twig" %}
{% import "block-functions.twig" as functions %}

{% block block_content %}
  {% set img_src = _block_img.src|resize(1080)|default('https://picsum.photos/id/' ~ theme_img_id ~ '/1080/675') %}
  {% set img_alt = _block_img.alt %}
  {% set bg_color = fields.bg_color|default('#f8f8f8') %}
  
  <div class="uk-child-width-1-2@m uk-grid-match uk-grid-collapse uk-grid {{ light_class }}" style="background-color:{{ bg_color|e('esc_html') }}" uk-grid>
    
    <div class="block-content-area uk-flex uk-flex-{{ align_content|e('esc_html') }}">
      <div class="uk-padding-large">
        <InnerBlocks />
      </div>
    </div>
    
    <div class="block-img-area uk-flex {{ first_class }}">
      {{ functions.block_img(is_preview, img_src, img_alt, {class: 'cover-img', w: '1080', h: '675'}) }}
    </div>
    
  </div>
{% endblock %}